!!! 5
%html
  %head
    = stylesheet_link_tag "http://fonts.googleapis.com/css?family=Arvo"
    = stylesheet_link_tag "application", media: "all"
    %meta{ :"http-equiv" => "X-UA-Compatible", :content => "IE=edge,chrome=1" }
    %meta{:name => "viewport", :content => "width=device-width"}
    %title Cheap Taps! Find deals on drinks near you
    = csrf_meta_tags
  %body{class: "#{controller_name} #{action_name}"}
    = render partial: "users/sidebar"
    .non-sidebar-container
      = render partial: "shared/header"
      = render partial: "shared/flashes"
      #map
      .container= yield
  = javascript_include_tag "require.min", "data-main" => "/assets/main"